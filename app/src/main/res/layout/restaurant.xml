<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/cview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="6dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        >
        
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_res"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                />

            <RelativeLayout
                android:id="@+id/iv_detail"
                android:layout_below="@+id/iv_res"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/res_name"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="name"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="4dp"

                    />

                <ImageView

                    android:src="@drawable/ic_star_black_24dp"
                    android:id="@+id/iv_rating"
                    android:layout_toLeftOf="@+id/tv_rating"
                    android:layout_marginRight="10dp"
                    android:layout_width="25dp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="0.0"
                    android:layout_marginRight="40dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="4dp"
                    />


            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/location_detail"
                android:layout_below="@+id/iv_detail"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:padding="4dp"
                    android:src="@drawable/ic_place_black_24dp"
                    android:id="@+id/iv_location"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="centerCrop"
                    android:layout_width="20dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_marginLeft="10dp"
                    android:text="location"
                    android:layout_toRightOf="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="4dp"

                    />




            </RelativeLayout>


            <RelativeLayout
                android:layout_below="@+id/location_detail"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_food_name"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Mexican food"
                    android:gravity="center"
                    android:padding="4dp"
                    />


                <TextView
                    android:id="@+id/openstatus"
                    android:layout_alignParentRight="true"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="closed"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:background="#da1818"
                    android:textColor="#ffffff"
                    android:padding="4dp"

                    />

                <TextView
                    android:id="@+id/tv_distance"
                    android:text="4.1km"
                    android:textColor="#ffffff"
                    android:layout_toLeftOf="@+id/openstatus"
                    android:layout_width="60dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:padding="4dp"
                    />

            </RelativeLayout>

        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>